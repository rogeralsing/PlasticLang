<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
        <AssemblyName>PlasticLang</AssemblyName>
        <RootNamespace>PlasticLang</RootNamespace>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Sprache" Version="2.3.2-develop-00043" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="sample.pla" />
      <Content Include="sample.pla">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
